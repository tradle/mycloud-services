{
  "compilerOptions": {
    "watch": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      // "*": ["node_modules/*"]
      // "@localtypes": ["src/types.ts"]
      //   "@errors": ["src/errors.ts"],
      //   "@assert": ["src/assert.ts"]
    }
  },
  "types": [
    "node",
    "aws-sdk",
    "pino",
    "tape",
    "sinon",
    "lodash",
    "@tradle/dynamodb",
    "@tradle/aws-utils",
    "@tradle/errors"
  ],
  "include": ["src/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": true
}
