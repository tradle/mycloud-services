{
  "compilerOptions": {
    "lib": ["es2017"],
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@localtypes": ["src/types.d.ts"]
      //   "@errors": ["src/errors.ts"],
      //   "@assert": ["src/assert.ts"]
    }
  },
  "types": ["node", "aws-sdk", "pino", "tape", "sinon", "lodash", "@tradle/dynamodb"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": true
}
